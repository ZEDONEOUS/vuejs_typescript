{
    "compilerOptions": {
        "target": "esnext",
        "lib": [
            "dom",
            "esnext"
        ],
        "module": "es2015",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "jsx": "preserve",
        "jsxFactory": "h"
    },
    "include": [
        "./**/*.ts",
        "./**/**/*.vue",
        "./**/*.vue"
    ],
    "compileOnSave": false
}